{{ header }}
<div id="account-newsletter" class="container">
  <ul class="breadcrumb">
    {% for breadcrumb in breadcrumbs %}
    <li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
    {% endfor %}
  </ul>
  <div class="row">{{ column_left }}
    {% if column_left and column_right %}
    {% set class = 'col-sm-6' %}
    {% elseif column_left or column_right %}
    {% set class = 'col-sm-9' %}
    {% else %}
    {% set class = 'col-sm-12' %}
    {% endif %}
    <div id="content" class="{{ class }}">{{ content_top }}
      <h1>{{ heading_title }}</h1>
      <form action="{{ action }}" method="post" enctype="multipart/form-data" class="form-horizontal">
        <fieldset>
        <div class="container mt-5">
        <div class="row form_width bg_theme">
        <h3 class="text_color"> Are You Subscribe?</h3>
        <hr>
          <div class="form-group radios">
        <div class="from_grp">
        <label for="">Yes</label>
        <input type="radio" value=""/>
      </div>
        </div>
        <div class="form-group radios">
        <div class="from_grp">
        <label for="">No</label>
        <input type="radio" value="" />
      </div>
        </div>
      </div>
      </div>
        </fieldset>
        <div class="buttons clearfix butn_style">
          <div class="pull-left"><a href="{{ back }}" class="btn btn-default">{{ button_back }}</a></div>
          <div class="pull-right">
            <input type="submit" value="{{ button_continue }}" class="btn btn_color" />
          </div>
        </div>
      </form>
      {{ content_bottom }}</div>
    {{ column_right }}</div>
</div>
{{ footer }}