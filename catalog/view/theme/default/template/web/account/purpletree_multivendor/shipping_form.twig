{{ header }}
<div class="container container">
	<ul class="breadcrumb breadcrumb">
		{% for breadcrumb in breadcrumbs %}
		<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
		{% endfor %}
	</ul>
	{% if success %}
	<div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }}<button type="button" class="close" data-dismiss="alert">&times;</button></div>
	{% endif %}
	{% if error_warning %}
	<div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}<button type="button" class="close" data-dismiss="alert">&times;</button></div>
	{% endif %}
	<div class="row d-flex row">{{ column_left }}
		{% if column_left and column_right %}
		{% set class = 'col-sm-6 col-sm-6' %}
		{% elseif column_left or column_right %}
		{% set class = 'col-sm-9 col-sm-9' %}
		{% else %}
		{% set class = 'col-sm-12 col-sm-12' %}
		{% endif %}
		<div id="content" class="{{ class }}">{{ content_top }}
			<div class="pull-right">
				
				<button type="submit" form="form-customer" data-toggle="tooltip" title="{{ button_save }}" class="btn btn-primary"><i class="fa fa-save"></i></button>
			<a href="{{ cancel }}" data-toggle="tooltip" title="{{ button_cancel }}" class="btn btn-default"><i class="fa fa-reply"></i></a></div>
			<h1>{{ heading_title }}</h1>
			<div class="panel panel-default" >
				<div class="panel-heading">
					<h3 class="panel-title"><i class="fa fa-pencil fas fa-edit"></i> {{ text_form }}</h3>
				</div>
				<div class="panel-body">
					<form action="" method="post" enctype="multipart/form-data" id="form-customer" class="form-horizontal">
						<div class="tab-content">
							<div class="tab-pane active" id="tab-general">
								<div class="row">
									
									<div class="col-sm-10">
										<div class="tab-content">
											<div class="tab-pane active" id="tab-customer">
												<fieldset>
													
													<!-- country -->
													
													<div class="form-group required">
														<label class="col-sm-2 control-label" for="input-storecountry">{{ entry_shipping_country }}</label>
														<div class="col-sm-10">
															<select name="shipping_country" id="input-shippingcountry" class="form-control">
																<option value="">{{ text_select }}</option>
																{% for country in countries %}
																{% if country.country_id == shipping_country %}
																<option value="{{ country.country_id }}" selected="selected">{{ country.name }}</option>
																{% else %}
																<option value="{{ country.country_id }}">{{ country.name }}</option>
																{% endif %}
																{% endfor %}
															</select>
															{% if error_shipping_country  %}
															<div class="text-danger">{{ error_shipping_country }}</div>
															{% endif %}
														</div>
													</div>
													
													<!-- country -->
													
													<div class="form-group required">
														<label class="col-sm-2 control-label" for="input-zip-from">{{ entry_zip_from }}</label>
														<div class="col-sm-10">
															<input type="text" name="zip_from" value="{{ zip_from }}" placeholder="{{ entry_zip_from }}" id="input-zip-from" class="form-control" />
															{% if error_zip_from %}
															<div class="text-danger">{{ error_zip_from }}</div>
														{% endif %}</div>
													</div>
													<div class="form-group required">
														<label class="col-sm-2 control-label" for="input-zip-to">{{ entry_zip_to }}</label>
														<div class="col-sm-10">
															<input type="text" name="zip_to" value="{{ zip_to }}" placeholder="{{ entry_zip_to }}" id="input-zip-to" class="form-control" />
															{% if error_zip_to %}
															<div class="text-danger">{{ error_zip_to }}</div>
														{% endif %}</div>
													</div>
													
													<div class="form-group required">
														<label class="col-sm-2 control-label" for="input-weight-from">{{ entry_weight_from }}</label>
														<div class="col-sm-10">
															<input type="text" name="weight_from" value="{{ weight_from }}" placeholder="{{ entry_weight_from }}" id="input-weight-from" class="form-control" />
															{% if error_weight_from %}
															<div class="text-danger">{{ error_weight_from }}</div>
														{% endif %}</div>
													</div>
													<div class="form-group required">
														<label class="col-sm-2 control-label" for="input-weight-to">{{ entry_weight_to }}</label>
														<div class="col-sm-10">
															<input type="text" name="weight_to" value="{{ weight_to }}" placeholder="{{ entry_weight_to }}" id="input-weight-to" class="form-control" />
															{% if error_weight_to %}
															<div class="text-danger">{{ error_weight_to }}</div>
														{% endif %}</div>
													</div>
													<div class="form-group required">
														<label class="col-sm-2 control-label" for="input-price">{{ entry_price }}</label>
														<div class="col-sm-10">
															<input type="text" name="price" value="{{ price }}" placeholder="{{ entry_price }}" id="input-price" class="form-control" />
															{% if error_price %}
															<div class="text-danger">{{ error_price }}</div>
														{% endif %}</div>
													</div>
													<!-- 	<div class="form-group required">
														<label class="col-sm-2 control-label" for="input-max-days">{{ entry_max_days }}</label>
														<div class="col-sm-10">
														<input type="text" name="max_days" value="{{ max_days }}" placeholder="{{ entry_max_days }}" id="input-max_days" class="form-control" />
														{% if error_max_days %}
														<div class="text-danger">{{ error_max_days }}</div>
														{% endif %}</div>
													</div> -->
												</fieldset>
												
											</div>
											
										</div>
									</div>
								</div>
							</div>
							
						</div>
					</form>
				</div>
			</div>
			
		{{ content_bottom }}</div>
	{{ column_right }}</div>
</div>

{{ footer }}