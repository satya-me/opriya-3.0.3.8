{{ header }}
<div class="container container">
	<ul class="breadcrumb breadcrumb">
		{% for breadcrumb in breadcrumbs %}
		<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
		{% endfor %}
	</ul>
	{% if success %}
	<div class="alert alert-success"><i class="fa fa-check-circle"></i> {{ success }}<button type="button" class="close" data-dismiss="alert">&times;</button></div>
	{% endif %}
	{% if error_warning %}
	<div class="alert alert-danger"><i class="fa fa-exclamation-circle"></i> {{ error_warning }}<button type="button" class="close" data-dismiss="alert">&times;</button></div>
	{% endif %}
	<div class="row d-flex row">{{ column_left }}
		{% if column_left and column_right %}
		{% set class = 'col-sm-6 col-sm-6' %}
		{% elseif column_left or column_right %}
		{% set class = 'col-sm-9 col-sm-9' %}
		{% else %}
		{% set class = 'col-sm-12 col-sm-12' %}
		{% endif %}
		<div id="content" class="{{ class }}">{{ content_top }}
			
			<h1>{{ heading_title }}</h1>
			<div class="panel panel-default">
				<div class="panel_heading">
					<h3 class="panel-title"><i class="fa fa-list"></i> {{ text_bulk_product_upload }}</h3>
				</div>
				
				<div class="panel-body">
					<div class="well panel_body">
						<div class="row p-3">
							<div class="col-sm-12" style="text-align:left;">
								<div>
									<div class="panel_content">
										<label class="control-label" for="input-name" style="  font-weight: normal; ">{{ text_maxtime_info }}</label><label style="font-weight: bold;">{{ max_time }} {{'seconds' }}</label>
										
									</div>
									<div class="panel_content">
										
										<label class="control-label" for="input-name" style=" font-weight: normal ">{{ text_file_size_info }} </label><label style="font-weight: bold;">{{ memory_limit }}</label>
										
									</div>
									<div class="panel_content">
										
										<label style="font-weight: bold;"><a href="{{ seller_template }}">{{ seller_bulk_product_upload_sheet }}</a></label>
										
									</div>
								</div>
								
							</div>
						</div>
					</div>  
					<form action="{{ export }}" method="post" enctype="multipart/form-data" id="form-customer">
						<div class="well panel_body">
							<h4 class="panel-title"> {{ text_bulk_product_export }}</h4>
							<div class="row">
								<div class="col-sm-4" style="text-align:left;">
									<div class="form-group">
										<label class="control-label" for="input-name" >{{ entry_select_language }}</label>
										<select name="language" id="input-status" class="form-control">
											{% for lang in lang %}
											<option value="{{ lang.language_id }}" >{{ lang.name }}</option>
											{% endfor %}
										</select>
									</div>
								</div>
								<div class="col-sm-2 col-sm-offset-6 " style="text-align:left;">
									<div class="form-group">
										<button type="submit" name="submit" value="{{ button_upload }}" class="btn btn_color" class="button_add" id="export" style=" padding: 8px 20px 8px 20px; margin-top: 24px; " >{{ text_export }}</button>
										
									</div>
								</div>
							</div>
						</div>
					</form>
					<form action="{{ action }}" method="post" enctype="multipart/form-data" id="form-customer">
						<div class="panel_body">
							<h4 class="panel-title"> {{ text_bulk_product_import }}</h4>
							<div class="row">
								
								<div class="col-sm-6" style="text-align:left;">
								<input type="checkbox" id="check" value="true" name="dataoverwrite"  />
							<label class="control-label" onclick="checkbox()" for="input-name" style=" padding: 0px 0px 0px 8px; ">{{ text_upload_info }}</label>
								</div>
								
								
								<div class="col-sm-4" style="text-align:left;">
									<div class="form-group">
										<label class="control-label" for="input-name" >{{ entry_select_language }}</label>
										<select name="language" id="input-status" class="form-control">
											{% for lang in lang %}
											<option value="{{ lang.language_id }}" >{{ lang.name }}</option>
											{% endfor %}
										</select>
									</div>
								</div>
								
								
								<div class="col-sm-6" style="text-align:left;">
									<div class="form-group">
										<input type="file" style="height:35px; margin-top: 24px;" id="import-file" name="import">
										
									</div>
								</div>
								
								<div class="col-sm-2" style="text-align:left;">
									<div class="form-group">
										<button type="submit" name="submit" value="{{ button_upload }}" id="import" class="btn btn_color" class="button_add"  style=" padding: 8px 20px 8px 20px; margin-top: 24px; " >{{ text_import }}</button>
										
									</div>
								</div>
								
							</div>
						</div>
					</form>
					
				</div>
			</div>
		{{ content_bottom }}</div>
	{{ column_right }}</div>
</div>

{{ footer }}
<script type="text/javascript">
	function checkbox()
	{
		var checkboxselect=document.getElementById("check").checked;
		if(checkboxselect)
		{
			document.getElementById("check").checked=false;
			} else {
			document.getElementById("check").checked=true;	
		}
	}
</script>
