    <body>
        <div id="account-register" class="container">
            <div class="pts-row d-flex row">
                <div id="content" class="pts-col-sm-9 col-sm-9">
                    <form action="" method="post" name="sellerregForm" id="regForm" enctype="multipart/form-data" class="form-horizontal">
                        <div class="col-md-12">
                            <div class="{{ setdivclass }} col-md-offset-3 md-offset-3">
                                <h2 class="text-center">
                                    {{ text_seller_register_page }}
                                </h2>
                                <hr style="width:226px;border:2px solid #FF8100;margin-top:5px;border-radius:50px;">
                                <div class="head_steps text-center">
                                    <span class="step step-one ">
                                        <div class="step-icon">
                                            <i class="fa fa-pencil fa-edit"></i>
                                        </div>
                                        <p>
                                            {{ text_personal_details }}
                                        </p>
                                    </span>
                                    <span class="step step-two">
                                        <div class="step-icon">
                                            <i class="fa fa-user-o fa-users"></i>
                                        </div>
                                        <p>
                                            {{ text_seller_information1 }}
                                        </p>
                                    </span>
                                    <span class="step step-three">
                                        <div class="step-icon">
                                            <i class="fa fa-credit-card"></i>
                                        </div>
                                        <p>
                                            {{ text_payment_details1 }}
                                        </p>
                                    </span>
                                </div>
                                <div class="well seller-rgistration-form" style="padding:40px">
                                    <div class="col-md-12 p-0">
                                        <div class=" col-md-7 pull-left-1 p-0">
                                            <p class="new-seller-login-here">
                                                <span class="login-seller">
                                                    <i class="fa fa-user-o fa-users"></i>
                                                    {{ text_new_customer_register }}
                                                </span>
                                                <a href="{{ sellerlogin }}" style="font-size:11px">
                                                    {{ text_seller_login1 }}
                                                </a>
                                                <span></span>
                                            </p>
                                        </div>
                                        <div class=" col-md-5  pull-right-1 p-0">
                                            <div style="overflow:auto;">
                                                <div style="float:right;">
                                                    <button type="button" id="prevBtn" class="btn_control" onclick="nextPrev(-1)">
                                                        {{ btn_prev }}
                                                    </button>
                                                    <button type="button" id="nextBtn" class="btn_control" onclick="nextPrev(1)">
                                                        {{ btn_next }}
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <hr style="margin-top:16px;margin-bottom:5px;overflow: hidden;" />
                                    <!--personal data-->
                                    <div class="tab">
                                        {% if loggedcus == '' %}
                                            <div class="row " style="display:none">
                                                <div class="form-group required ptsradioinp" style="display: {% if customer_groups|length > 1 %} block {% else %} none {% endif %};">
                                                    <label class="col-sm-2 control-label">
                                                        {{ entry_customer_group }}
                                                    </label>
                                                    <div class="col-sm-10">
                                                        {% for customer_group in customer_groups %}
                                                            {% if customer_group.customer_group_id == customer_group_id %}
                                                                <div class="radio">
                                                                    <label>
                                                                        <input type="radio" name="customer_group_id" value="{{ customer_group.customer_group_id }}" checked="checked" />
                                                                        {{ customer_group.name }}
                                                                    </label>
                                                                </div>
                                                            {% else %}
                                                                <div class="radio">
                                                                    <label>
                                                                        <input type="radio" name="customer_group_id" value="{{ customer_group.customer_group_id }}" />
                                                                        {{ customer_group.name }}
                                                                    </label>
                                                                </div>
                                                            {% endif %}
                                                        {% endfor %}
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row ">
                                                <div class="col-md-5 required">
                                                    <div class="form-group ">
                                                        <label class="control-label " for="input-firstname">
                                                            {{ entry_firstname }}
                                                        </label>
                                                        <input type="text" name="firstname" value="{{ firstname }}" placeholder="{{ entry_firstname }}" id="input-firstname" class="form-control " />
                                                        {% if error_firstname %}
                                                            <div class="text-danger">
                                                                {{ error_firstname }}
                                                            </div>
                                                        {% endif %}
                                                    </div>
                                                </div>
                                                <div class="col-md-2"></div>
                                                <div class="col-md-5 required">
                                                    <div class="form-group ">
                                                        <label class="control-label required" for="input-lastname">
                                                            {{ entry_lastname }}
                                                        </label>
                                                        <input type="text" name="lastname" value="{{ lastname }}" placeholder="{{ entry_lastname }}" id="input-lastname" class="form-control" />
                                                        {% if error_lastname %}
                                                            <div class="text-danger">
                                                                {{ error_lastname }}
                                                            </div>
                                                        {% endif %}
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="form-group required">
                                                <label class="control-label" for="input-email">
                                                    {{ entry_email }}
                                                </label>
                                                <input type="email" name="email" value="{{ email }}" placeholder="{{ entry_email }}" id="input-email" class="form-control" />
                                                {% if error_email %}
                                                    <div class="text-danger">
                                                        {{ error_email }}
                                                    </div>
                                                {% endif %}
                                            </div>
                                            <div class="form-group required">
                                                <label class="control-label" for="input-password">
                                                    {{ entry_password }}
                                                </label>
                                                <input type="password" name="password" value="{{ password }}" placeholder="{{ entry_password }}" id="password" class="form-control" />
                                                {% if error_password %}
                                                    <div class="text-danger">
                                                        {{ error_password }}
                                                    </div>
                                                {% endif %}
                                            </div>
                                            <div class="form-group required">
                                                <label class="control-label" for="input-confirm">
                                                    {{ entry_confirm }}
                                                </label>
                                                <input type="password" name="confirm" value="{{ confirm }}" placeholder="{{ entry_confirm }}" id="confirm" class="form-control" />
                                                {% if error_confirm %}
                                                    <div class="text-danger">
                                                        {{ error_confirm }}
                                                    </div>
                                                {% endif %}
                                            </div>
                                            <div class="form-group required">
                                                <label class="control-label" for="input-telephone">
                                                    {{ entry_telephone }}
                                                </label>
                                                <input type="tel" name="telephone" value="{{ telephone }}" placeholder="{{ entry_telephone }}" id="input-telephone" class="form-control" />
                                                {% if error_telephone %}
                                                    <div class="text-danger">
                                                        {{ error_telephone }}
                                                    </div>
                                                {% endif %}
                                            </div>
                                            
                                            <h4 class="text-center">Supplier Statutory Details</h4>
                                            <hr/>

                                            <div class="row ">
                                                <div class="col-md-5 required">
                                                    <div class="form-group ">
                                                    <label class="control-label" for="input-pan">
                                                        {{ "PAN Number" }}
                                                    </label>
                                                    <input type="text" name="pan" value="{{ pan }}" placeholder="{{ 'PAN Number' }}" id="input-pan" class="form-control" />
                                                    {% if error_pan %}
                                                        <div class="text-danger">
                                                            {{ error_pan }}
                                                        </div>
                                                    {% endif %}
                                                    </div>
                                                </div>
                                                <div class="col-md-2"></div>
                                                <div class="col-md-5 required">
                                                    <div class="form-group ">
                                                    <label class="control-label" for="pan-doc">
                                                        {{ "PAN Document" }}
                                                    </label>
                                                    <input class="filechangepts" type="file" name="pan_doc" id="pan-doc" value="" accept="image/gif, image/jpeg, image/png">
                                                    {% if error_pan_doc %}
                                                        <div class="text-danger">
                                                            {{ error_pan_doc }}
                                                        </div>
                                                    {% endif %}
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row ">
                                                <div class="col-md-5 ">
                                                    <div class="form-group ">
                                                    <label class="control-label" for="input-title">
                                                        {{ "Title" }}
                                                    </label>
                                                    <input type="text" name="title" value="{{ title }}" placeholder="{{ 'Title' }}" id="input-title" class="form-control" />
                                                    {% if error_title %}
                                                        <div class="text-danger">
                                                            {{ error_title }}
                                                        </div>
                                                    {% endif %}
                                                    </div>
                                                </div>
                                                <div class="col-md-2"></div>
                                                <div class="col-md-5 required">
                                                    <div class="form-group ">
                                                    <label class="control-label" for="input-supplier_name">
                                                        {{ "Supplier Name" }}
                                                    </label>
                                                    <input type="text" name="supplier_name" value="{{ supplier_name }}" placeholder="{{ 'Supplier Name' }}" id="input-supplier-name" class="form-control" />
                                                    {% if error_supplier_name %}
                                                        <div class="text-danger">
                                                            {{ error_supplier_name }}
                                                        </div>
                                                    {% endif %}
                                                    </div>
                                                </div>
                                            </div>

                                            <h5 class="text-center">MSME Information</h5>
                                            <div class="row ">
                                                <div class="col-md-5 ">
                                                    <div class="form-group ">
                                                    <label class="control-label" for="input-msme">
                                                        {{ "Are you MSME?" }}
                                                    </label>
                                                    <br>
                                                    <label class="radio-inline">
                                                    <input type="radio" name="is_msme" checked>Yes
                                                  </label>
                                                  <label class="radio-inline">
                                                    <input type="radio" name="is_msme">No
                                                  </label>
                                                    {% if error_msme %}
                                                        <div class="text-danger">
                                                            {{ error_msme }}
                                                        </div>
                                                    {% endif %}
                                                    </div>
                                                </div>
                                                <div class="col-md-2"></div>
                                                <div class="col-md-5 ">
                                                    <div class="form-group ">
                                                    <label class="control-label" for="input-uam">
                                                        {{ "UAM Number" }}
                                                    </label>
                                                    <input type="text" name="uam" value="{{ uam }}" placeholder="{{ 'UAM Number' }}" id="input-uam" class="form-control" />
                                                    {% if error_uam %}
                                                        <div class="text-danger">
                                                            {{ error_uam }}
                                                        </div>
                                                    {% endif %}
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row ">
                                                <div class="col-md-5 ">
                                                    <div class="form-group ">
                                                    <label class="control-label" for="input-memorandum">
                                                        {{ "Memorandum Number" }}
                                                    </label>
                                                    <input type="text" name="memorandum" value="{{ memorandum }}" placeholder="{{ 'Memorandum Number' }}" id="input-memorandum" class="form-control" />
                                                    {% if error_memorandum %}
                                                        <div class="text-danger">
                                                            {{ error_memorandum }}
                                                        </div>
                                                    {% endif %}
                                                    </div>
                                                </div>
                                                <div class="col-md-2"></div>
                                                <div class="col-md-5 ">
                                                    <div class="form-group ">
                                                    <label class="control-label" for="input-msme_type">
                                                        {{ "MSME Type" }}
                                                    </label>
                                                    <div class="store-country">
                                                        <select name="msme_type" id="input-msme_type" class="form-control">
                                                            <option value="">
                                                                {{ text_select }}
                                                            </option>
                                                            <option value="">{{ "Small" }}</option>
                                                            <option value="">{{ "Memium" }}</option>
                                                        </select>
                                                    </div>
                                                    {% if error_msme_type %}
                                                        <div class="text-danger">
                                                            {{ error_msme_type }}
                                                        </div>
                                                    {% endif %}
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row ">
                                                <div class="col-md-3 ">
                                                    <div class="form-group ">
                                                    <label class="control-label" for="input-date_of_issue">
                                                        {{ "Date Of Issue" }}
                                                    </label>
                                                    <input type="date" name="date_of_issue" value="{{ date_of_issue }}" id="input-date_of_issue" class="form-control" />
                                                    {% if error_date_of_issue %}
                                                        <div class="text-danger">
                                                            {{ error_date_of_issue }}
                                                        </div>
                                                    {% endif %}
                                                    </div>
                                                </div>
                                                <div class="col-md-1"></div>
                                                <div class="col-md-3">
                                                    <div class="form-group ">
                                                        <label class="control-label" for="input-validity_year">
                                                            {{ "Validity Year" }} <small style="color: red;">Ex: 2000-2006</small>
                                                        </label>
                                                        <input type="text" name="validity_year" value="{{ validity_year }}" id="input-validity_year" class="form-control" />
                                                        {% if error_validity_year %}
                                                            <div class="text-danger">
                                                                {{ error_validity_year }}
                                                            </div>
                                                        {% endif %}
                                                    </div>
                                                </div>
                                                <div class="col-md-1"></div>
                                                <div class="col-md-4 ">
                                                    <div class="form-group ">
                                                    <label class="control-label" for="input-msme_crt">
                                                        {{ "MSME Certificate" }}
                                                    </label>
                                                    <input class="filechangepts" type="file" name="msme_crt_doc" id="input-msme_crt" value="" accept="image/gif, image/jpeg, image/png">
                                                    {% if error_msme_crt %}
                                                        <div class="text-danger">
                                                            {{ error_msme_crt }}
                                                        </div>
                                                    {% endif %}
                                                    </div>
                                                </div>
                                            </div>

                                            <h4 class="text-center">Registered Office Address</h4>
                                            <hr/>
                                            <div class="row ">
                                                <div class="col-md-5 required">
                                                    <div class="form-group ">
                                                    <label class="control-label" for="input-address_1">
                                                        {{ "Address 1" }}
                                                    </label>
                                                    <input type="text" name="address_1" value="{{ address_1 }}" id="input-address_1" class="form-control" />
                                                    {% if error_address_1 %}
                                                        <div class="text-danger">
                                                            {{ error_address_1 }}
                                                        </div>
                                                    {% endif %}
                                                    </div>
                                                </div>
                                                <div class="col-md-2"></div>
                                                <div class="col-md-5 ">
                                                    <div class="form-group ">
                                                    <label class="control-label" for="input-address_2">
                                                        {{ "Address 2" }}
                                                    </label>
                                                    <input type="text" name="address_2" value="{{ address_2 }}" id="input-address_2" class="form-control" />
                                                    {% if error_address_2 %}
                                                        <div class="text-danger">
                                                            {{ error_address_2 }}
                                                        </div>
                                                    {% endif %}
                                                    </div>
                                                </div>
                                                
                                            </div>

                                            <div class="row ">
                                                <div class="col-md-5 ">
                                                    <div class="form-group ">
                                                    <label class="control-label" for="input-address_3">
                                                        {{ "Address 3" }}
                                                    </label>
                                                    <input type="text" name="address_3" value="{{ address_3 }}" id="input-address_3" class="form-control" />
                                                    {% if error_address_3 %}
                                                        <div class="text-danger">
                                                            {{ error_address_3 }}
                                                        </div>
                                                    {% endif %}
                                                    </div>
                                                </div>
                                                <div class="col-md-2"></div>
                                                <div class="col-md-5 required">
                                                    <div class="form-group ">
                                                    <label class="control-label" for="input-country_reg">
                                                        {{ "Country" }}
                                                    </label>
                                                    <div class="store-country">
                                                    <select name="store_country_reg" id="input-country_reg" onchange="country2(this,'{{ store_state }}');" class="form-control">
                                                        <option value="">
                                                            {{ text_select }}
                                                        </option>
                                                        {% for country in countries %}
                                                            {% if country.country_id == store_country %}
                                                                <option value="{{ country.country_id }}" selected="selected">
                                                                    {{ country.name }}
                                                                </option>
                                                            {% else %}
                                                                <option value="{{ country.country_id }}">
                                                                    {{ country.name }}
                                                                </option>
                                                            {% endif %}
                                                        {% endfor %}
                                                    </select>
                                                </div>
                                                    {% if error_country_reg %}
                                                        <div class="text-danger">
                                                            {{ error_country_reg }}
                                                        </div>
                                                    {% endif %}
                                                    </div>
                                                </div>
                                                
                                            </div>

                                            <div class="row ">
                                                <div class="col-md-5 required">
                                                    <div class="form-group ">
                                                        <label class="control-label" for="input-state_reg">
                                                            {{ "State" }}
                                                        </label>
                                                        <div class="store-state">
                                                            <select name="store_state_reg" id="input-state_reg" class="form-control"></select>
                                                        </div>
                                                    </div>
                                                    {% if error_state_reg %}
                                                        <div class="text-danger">
                                                            {{ error_state_reg }}
                                                        </div>
                                                    {% endif %}
                                                </div>
                                                <div class="col-md-2"></div>
                                                <div class="col-md-5 required">
                                                    <div class="form-group ">
                                                        <label class="control-label" for="input-city_reg">
                                                            {{ "City" }}
                                                        </label>
                                                        <div class="store-city">
                                                            <select name="store_city_reg" id="input-city_reg" class="form-control"></select>
                                                        </div>
                                                    </div>
                                                    {% if error_city_reg %}
                                                        <div class="text-danger">
                                                            {{ error_city_reg }}
                                                        </div>
                                                    {% endif %}
                                                </div>
                                            </div>

                                            <div class="row ">
                                                <div class="col-md-5 required">
                                                    <div class="form-group ">
                                                    <label class="control-label" for="input-pin_reg">
                                                        {{ "Pincode" }}
                                                    </label>
                                                    <input type="tel" name="pin_reg" value="{{ pin_reg }}" placeholder="{{ "Pincode" }}" id="input-pin_reg" class="form-control" />
                                                    {% if error_pin_reg %}
                                                        <div class="text-danger">
                                                            {{ error_pin_reg }}
                                                        </div>
                                                    {% endif %}
                                                    </div>
                                                </div>
                                            </div>

                                            <h4 class="text-center">Contact Information</h4>
                                            <hr/>

                                            <div class="row ">
                                                <div class="col-md-5 required">
                                                    <div class="form-group ">
                                                    <label class="control-label" for="input-firstname_reg">
                                                        {{ "First Name" }}
                                                    </label>
                                                    <input type="text" name="firstname_reg" value="{{ firstname_reg }}" id="input-firstname_reg" class="form-control" />
                                                    {% if error_firstname_reg %}
                                                        <div class="text-danger">
                                                            {{ error_firstname_reg }}
                                                        </div>
                                                    {% endif %}
                                                    </div>
                                                </div>
                                                <div class="col-md-2"></div>
                                                <div class="col-md-5 required">
                                                    <div class="form-group ">
                                                    <label class="control-label" for="input-lastname_reg">
                                                        {{ "Last Name" }}
                                                    </label>
                                                    <input type="text" name="lastname_reg" value="{{ lastname_reg }}" id="input-lastname_reg" class="form-control" />
                                                    {% if error_lastname_reg %}
                                                        <div class="text-danger">
                                                            {{ error_lastname_reg }}
                                                        </div>
                                                    {% endif %}
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row ">
                                                <div class="col-md-5 required">
