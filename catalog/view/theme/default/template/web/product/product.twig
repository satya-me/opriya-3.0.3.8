                                  <div class="slider responsive">
                                    {% for product in products %}
                                      <div class="item ">
                                        <div class="item-wrap">
                                          <div class="item-detail">
                                            <div class="item-img products-thumb">
                                              <a href="{{ product.href }}">
                                                <div class="product-thumb-hover">
                                                  <img width="300" height="300" src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}" class="attachment-shop_catalog size-shop_catalog wp-post-image"></div>
                                                </a>
                                                <!-- add to cart, wishlist, compare -->
                                                <div class="item-bottom clearfix">
                                                  <a rel="nofollow" href="javascript:void(0)" class="button product_type_simple add_to_cart_button ajax_add_to_cart" title="Add to Cart" onclick="cart.add('{{ product.product_id }}', '{{ product.minimum }}');">
                                                    Add to cart
