{% if logged %}
{%  if isSeller.store_status is defined %}
{% if isSeller.store_status %} 
<div class="pts-list-group" style="display: grid";>
	<h1 class="pts-seller-heading">&nbsp;{{ text_selleroption }}</h1>	
	<a id="pts-seller-panel-dashboardicons" class="pts-list-group-item" href="{{ dashboardicons }}">{{ text_dashboard_icon }}</a>
	<a id="pts-seller-panel-dashboard" class="pts-list-group-item" href="{{ dashboard }}">{{ text_dashboard }}</a>
    <a id="pts-seller-panel-sellerprofile" class="pts-list-group-item" href="{{ sellerprofile }}">{{ text_sellerprofile }}</a>
	{% if password %}
	<a id="pts-seller-panel-password" class="pts-list-group-item" href="{{ password }}" >{{ text_password }}</a>
	{% endif %}
	<a id="pts-seller-panel-sellerorder" class="pts-list-group-item" href="{{ sellerorder }}" >{{ text_sellerorder }}</a>
	<a id="pts-seller-panel-sellerproduct" class="pts-list-group-item" href="{{ sellerproduct }}" >{{ text_sellerproduct }}</a>
	<a id="pts-seller-panel-attribute-link" class="pts-list-group-item" href="{{ attribute_link }}" >{{ text_attribute }}</a>
	<a id="pts-seller-panel-attribute-groups-link" class="pts-list-group-item" href="{{ attribute_groups_link }}" >{{ text_attribute_groups }}</a>
	<a id="pts-seller-panel-options-link" class="pts-list-group-item" href="{{ options_link }}" >{{ text_options }}</a>
	{% if module_purpletree_multivendor_seller_product_template == 1 %}
	<a id="pts-seller-panel-seller-template-product" class="pts-list-group-item" href="{{ seller_template_product }}" >{{ text_seller_template_product }}</a>
	{% endif %}
	<a id="pts-seller-panel-seller-product-returns" class="pts-list-group-item" href="{{ seller_product_returns }}" >{{ text_seller_returns }}</a>
	<a id="pts-seller-panel-sellerstore" class="pts-list-group-item" href="{{ sellerstore }}" >{{ text_sellerstore }}</a>
	<a id="pts-seller-panel-sellerpayment" class="pts-list-group-item" href="{{ sellerpayment }}" >{{ text_sellerpayment }}</a>
	<a id="pts-seller-panel-sellercommission" class="pts-list-group-item" href="{{ sellercommission }}" >{{ text_sellercommission }}</a>
	<a id="pts-seller-panel-commissioninvoice" class="pts-list-group-item" href="{{ commissioninvoice }}" >{{ text_commissioninvoice }}</a>
	<a id="pts-seller-panel-sellercoupons" class="pts-list-group-item" href="{{ sellercoupons }}" >{{ text_sellercoupons }}</a>
	<a id="pts-seller-panel-" class="pts-list-group-item" href="{{ shipping }}" >{{ text_shipping }}</a>
	<a id="pts-seller-panel-bulkproductupload" class="pts-list-group-item" href="{{ bulkproductupload }}" >{{ text_bulkproductupload }}</a>
	<a id="pts-seller-panel-sellerenquiry" class="pts-list-group-item" href="{{ sellerenquiry }}" >{{ text_sellerenquiry }}</a> 
	<a id="pts-seller-panel-sellerenquiries" href="{{ sellerenquiries }}" class="pts-list-group-item">{{  text_seller_enquiries }}</a>  
	<a id="pts-seller-panel-sellerreview" class="pts-list-group-item" href="{{ sellerreview }}" >{{ text_sellerreview }}</a>
	<a id="pts-seller-panel-downloadsitems" class="pts-list-group-item" href="{{ downloadsitems }}" >{{ text_downloads }}</a>
	<!-- blog -->
	{% if seller_blog_status %} 
	<a id="pts-seller-panel-sellerblogpost" href="{{ sellerblogpost }}" class="pts-list-group-item">{{ text_blog_post }}</a>
	<a id="pts-seller-panel-sellerblogcomment" href="{{ sellerblogcomment }}" class="pts-list-group-item">{{ text_blog_comment }}</a> 	
	{% endif %}
	<!-- blog -->  
	{% if subscriptionplan %}
	<a id="pts-seller-panel-subscriptionplan" class="pts-list-group-item" href="{{ subscriptionplan }}">{{ text_subscription }}</a>
	<a id="pts-seller-panel-subscriptions" class="pts-list-group-item" href="{{ subscriptions }}">{{ text_subscriptions }}</a>	     {% endif %}   
	<a id="pts-seller-panel-removeseller" class="pts-list-group-item" href="{{ removeseller }}" onclick="return confirm('Are you sure?')" ><b>{{ text_removeseller }}</b></a>
	{% if logout %}
	<a id="pts-seller-panel-logout" class="pts-list-group-item" href="{{ logout }}" >{{ text_logout }}</a>
	{% endif %}
</div>
{% else %}
<div class="pts-list-group">
	{% if isSeller.is_removed %}
	<a  class="pts-list-group-item" href="{{ becomeseller }}">{{ text_becomeseller }}</a>
	{% else %}
	<a class="pts-list-group-item" javascript="void(0)">{{ text_approval }}</a>
	<a id="pts-seller-panel-sellerstore" class="pts-list-group-item" href="{{ sellerstore }}" >{{ text_sellerstore }}</a>
	{% endif %}
</div>
{% endif %}

<script>
	$(window).load(function() {
		if($('.pts-list-group').parent().attr('id') == 'column-right' || $('.pts-list-group').parent().hasClass('right_column')) {
			$('.pts-list-group').parent().addClass('pts-col-sm-3');
		}
		if ($(window).width() < 768) {
			$('.pts-list-group').parent().addClass('pts-column-right-sellerpanel');
		}
	});
</script>
<style>
	@media only screen and (max-width: 760px) {
	.pts-column-right-sellerpanel,#column-right {
	display:inline-block !important;
	margin: 0 auto;
	width: 100%;
	padding: 30px;
	z-index: 9 !important;
	}
	}
</style>
{% endif %} 

