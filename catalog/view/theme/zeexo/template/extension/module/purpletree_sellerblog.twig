		<div class="name" style="padding-top:0px">
		<a href="{{ pts_blog.href }}">{{ text_readmore }}</a>
		</div>
	</div> 
</div> 
					  
				<!-- featured blog -->	
                      </div>
                    {% endfor %} 
                  </div>
                </div>
              </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>

  {% if (theme_options.get( 'product_scroll_featured' ) != '0') %} 
  <script type="text/javascript">
    $(document).ready(function() {
      var owl{{ id }} = $(".box #myCarousel{{ id }} .owl-carousel");
      
      $("#myCarousel{{ id }}_next").click(function(){
          owl{{ id }}.trigger('next.owl.carousel');
          return false;
        })
      $("#myCarousel{{ id }}_prev").click(function(){
          owl{{ id }}.trigger('prev.owl.carousel');
          return false;
      });

    {% set itemsmobile = 2 %}
    {% set itemstablet = 3 %}

    {% if theme_options.get( 'product_per_pow' ) == 2 %}
      {% set itemsmobile = 1 %}
      {% set itemstablet = 2 %}
    {% endif %}

    {% set itemsperpage = 4 %} 
    {% if (theme_options.get( 'product_per_pow' ) > 1) %}{% set itemsperpage = theme_options.get( 'product_per_pow' ) %}{% endif %} 
   
      owl{{ id }}.owlCarousel({
        slideSpeed: 500,
        margin: 30,
        nav: false,
        dots: false,
        responsiveClass:true,
        responsive:{
            0:{
                items:{{ itemsmobile }},
            },
            600:{
                items:{{ itemstablet }},
            },
            1000:{
                items:{{ itemsperpage }},
            }
        }
       });
    });
  </script>
  {% endif %}
{% endif %}