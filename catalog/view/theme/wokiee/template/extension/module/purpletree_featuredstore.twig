{% if (registry.has('theme_options') == constant('true')) %} 
  {% set theme_options = registry.get('theme_options') %}
  {% set class = 'col-6 col-md-4 col-lg-3' %}
  {% if (theme_options.get( 'product_per_pow' ) == 1) %}{% set class = 'col-12' %}{% endif %}
  {% if (theme_options.get( 'product_per_pow' ) == 2) %}{% set class = 'col-12 col-md-6' %}{% endif %}
  {% if (theme_options.get( 'product_per_pow' ) == 3) %}{% set class = 'col-12 col-md-6 col-lg-4' %}{% endif %}
  {% if (theme_options.get( 'product_per_pow' ) == 4) %}{% set class = 'col-6 col-md-4 col-lg-3' %}{% endif %}
  {% if (theme_options.get( 'product_per_pow' ) == 5) %}{% set class = 'col-6 col-md-4 col-lg-25' %}{% endif %}
  {% if (theme_options.get( 'product_per_pow' ) == 6) %}{% set class = 'col-6 col-md-3 col-lg-2' %}{% endif %}

  <div class="container-indent">
    <div class="container container-fluid-custom-mobile-padding">
      <div class="tt-block-title">
        <h1 class="tt-title">{{ heading_title }}</h1>
      </div>

      {% if (theme_options.get( 'product_scroll_featured' ) != '0') %} 
      <div class="tt-carousel-products row arrow-location-tab arrow-location-tab01 tt-alignment-img tt-layout-product-item slick-animated-show-js" data-item="{{ theme_options.get( 'product_per_pow' ) }}">
      {% else %}
      <div class="row tt-layout-product-item">
      {% endif %}
        <div class="{{ class }}">
          {% for result in store %}
            {% if loop.index > 1 %}
              </div>
              <div class="{{ class }}">
            {% endif %}
             <!-- featured store  -->  
			   
			  {% set theme_options = registry.get('theme_options') %}
		{% set config = registry.get('config') %}

		<div class="tt-product thumbprod-center">
			<div class="tt-image-box">
				<a href="{{ result.href }}">
					{% if (result.store_logo) %} 
						<span class="tt-img">
						<img src="{{ result.store_logo }}" data-src="{{ result.store_logo }}" alt="{{ result.store_name }}"></span>
					{% else %} 
						<span class="tt-img"><img src="catalog/view/theme/wokiee/img/loader.svg" data-src="image/no_image.jpg" alt=""></span>
					{% endif %} 
					
				</a>
			</div>
			<div class="tt-description">
				<h2 class="tt-title"><a href="{{ result.href }}">{{ result.store_name }}</a></h2>
			</div>
		</div> 
			   
			 <!-- featured store  -->     
          {% endfor %} 
        </div>
      </div>
    </div>
  </div>
{% endif %}